    $command = $argv[1];

    if ( $argv[2] ) {
        throw new Exception( "Wrong Command.\nphp bangu -h to show available commands\n" );
    }

    ExecuteCLICommand::run( $command );

} catch ( \Throwable $e ) {

    printf( "â›” {$e->getMessage()}" );
}
